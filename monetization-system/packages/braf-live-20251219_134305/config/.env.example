# Database Configuration
DATABASE_URL=postgresql://user:password@db:5432/braf_monetization
REDIS_URL=redis://redis:6379

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Mobile Money APIs
OPAY_API_KEY=your_opay_api_key
OPAY_SECRET_KEY=your_opay_secret_key
PALMPAY_API_KEY=your_palmpay_api_key
PALMPAY_SECRET_KEY=your_palmpay_secret_key

# Cryptocurrency Configuration
TRON_PRIVATE_KEY=your_tron_private_key
ETH_PRIVATE_KEY=your_ethereum_private_key
BTC_WALLET=your_bitcoin_wallet_address
INFURA_PROJECT_ID=your_infura_project_id

# Security Configuration
SECRET_KEY=your_super_secret_key_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_32_bytes_base64
JWT_SECRET_KEY=your_jwt_secret_key

# Application Configuration
BASE_URL=http://localhost:8000
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# SSL Configuration (for production)
SSL_CERT_PATH=/app/certificates/cert.pem
SSL_KEY_PATH=/app/certificates/key.pem

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=1000
MAX_WITHDRAWALS_PER_DAY=10

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Webhook URLs
OPAY_WEBHOOK_URL=https://yourdomain.com/api/v1/webhooks/opay
PALMPAY_WEBHOOK_URL=https://yourdomain.com/api/v1/webhooks/palmpay
STRIPE_WEBHOOK_URL=https://yourdomain.com/api/v1/webhooks/stripe

# Platform Credentials (Base64 encoded for security)
SWAGBUCKS_ACCOUNTS=base64_encoded_account_data
SURVEYJUNKIE_ACCOUNTS=base64_encoded_account_data
YOUTUBE_ACCOUNTS=base64_encoded_account_data

# Compliance Settings
MAX_DAILY_EARNINGS=2000
COMPLIANCE_CHECK_INTERVAL=3600
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_MEDIUM=0.5

# Blockchain Network Settings
TRON_NETWORK=mainnet
ETH_NETWORK=mainnet
BTC_NETWORK=mainnet
GAS_PRICE_GWEI=50
CONFIRMATION_BLOCKS=12