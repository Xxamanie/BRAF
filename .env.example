# BRAF Environment Configuration
# Copy this file to .env and update values for your environment

# Database Configuration
DATABASE_URL=postgresql+asyncpg://braf:password@localhost:5432/braf_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20

# CAPTCHA Service API Keys
CAPTCHA_API_KEY=your_2captcha_api_key_here
ANTICAPTCHA_API_KEY=your_anticaptcha_api_key_here

# HashiCorp Vault Configuration (Production)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=dev-token
VAULT_MOUNT_PATH=secret

# Security Configuration
BRAF_SECRET_KEY=your-secret-key-here-change-in-production
BRAF_AUTH_TOKEN=your-auth-token-here

# Monitoring Configuration
PROMETHEUS_PORT=8001
ELK_ELASTICSEARCH_URL=http://localhost:9200

# Compliance Configuration
MAX_REQUESTS_PER_HOUR=100
MAX_REQUESTS_PER_DAY=1000
ETHICAL_CONSTRAINTS_ENABLED=true

# Development Configuration
DEBUG=true
LOG_LEVEL=INFO